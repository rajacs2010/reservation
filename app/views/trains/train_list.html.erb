

<html>

	    <div class="CSSTableGenerator">
		<h2><center><b>Train List</b></center></h2>
		<%= link_to "New Train", new_train_path, :class => "button" %>&emsp;
			<INPUT Type="button" VALUE="Back" onClick="history.go(-1);return true;" class="button"><br /><br />

		<table class="table1">
			<tr>
				<td>S.No</td>
				<td>Route</td>
				<td>Train Number</td>
				<td>Train Name</td>
				<td>Departure</td>
				<td></td>
				
			</tr>
		    <% i = 0 %>
		    <% @train.each do |train| %>
			
			<tr>
				<td><center><%= i = i + 1 %></center></td>
				<td><center><%= train.route_id %></center></td>
				<td><%= train.train_number %></td>
				<td><%= train.train_name + " " + train.train_type %></td>
				<td><%= train.departure_time.strftime("%H:%M") %></td>
				<td><%= link_to image_tag("edit.png"),edit_train_path(train)%>&emsp;&emsp;
				    <%= link_to image_tag("delete.png"), train, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
			</tr>

		    <% end %>
		</table>
		<br />
		<%= link_to "New Train", new_train_path, :class => "button" %>&emsp;
			<INPUT Type="button" VALUE="Back" onClick="history.go(-1);return true;" class="button">
	    </div>

</html>

